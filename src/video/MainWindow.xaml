<Window x:Class="VideoProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Processor" Height="600" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <MediaElement x:Name="SourceVideo" 
                        LoadedBehavior="Manual" 
                        UnloadedBehavior="Manual"
                        MediaOpened="SourceVideo_MediaOpened"
                        MediaEnded="SourceVideo_MediaEnded"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="OpenButton" Content="打开视频" Click="OpenButton_Click" Width="100" Margin="0,0,10,0"/>
                <Button x:Name="PlayButton" Content="播放" Click="PlayButton_Click" Width="100" Margin="0,0,10,0"/>
                <Button x:Name="PauseButton" Content="暂停" Click="PauseButton_Click" Width="100"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="ProcessedVideo"/>
            <ComboBox x:Name="EffectSelector" Grid.Row="1" Margin="0,10,0,0"
                      SelectionChanged="EffectSelector_SelectionChanged">
                <ComboBoxItem Content="灰度效果" IsSelected="True"/>
                <ComboBoxItem Content="边缘检测"/>
                <ComboBoxItem Content="模糊效果"/>
                <ComboBoxItem Content="物体检测"/>
            </ComboBox>
        </Grid>
    </Grid>
</Window> 